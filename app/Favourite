"use client";

import React, { useState, useEffect } from "react";
import { useRouter } from "next/navigation";
import {
  Heart,
  MapPin,
  Calendar,
  Eye,
  Trash2,
  Search,
  Filter,
  Car,
  Bike,
  Truck,
} from "lucide-react";
import dynamic from "next/dynamic";

// ============ TYPES ============
interface FavoriteItem {
  id: string;
  name: string;
  type: "bike" | "car" | "cycle" | "tractor" | "auto" | "pickup" | "bus" | "truck";
  year: number;
  price: number;
  location: string;
  images: string[];
  views: number;
  kmDriven?: string;
  cc?: string;
  fuelType?: string;
  condition: "new" | "used";
  postedDate: string;
}

// ============ MOCK FAVORITES DATA ============
const generateMockFavorites = (): FavoriteItem[] => [
  {
